<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.chemsym.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Choice"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="25dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Second Choice"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="180dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"

            />


        <Button
            android:id="@+id/compare"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Compare"
            android:layout_marginLeft="100dp"
            android:onClick="compare"

            />


        <ImageButton
            android:id="@+id/flamamble"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:background="@drawable/flammable"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="93dp"
            />



        <ImageButton
            android:id="@+id/nontoxicflammablegas"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:background="@drawable/nonflammabletoxicgas"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="100dp"
            android:layout_below="@+id/flamamble"
            />

        <ImageButton
            android:id="@+id/toxicgas"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:background="@drawable/toxicgas"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="100dp"
            android:layout_below="@+id/nontoxicflammablegas"
            />


        <ImageButton
            android:id="@+id/oxidising_gas"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:background="@drawable/oxising_gas"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="100dp"
            android:layout_below="@+id/toxicgas"
            />

        <ImageButton
            android:id="@+id/flammableliquid"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:background="@drawable/flammableliquid"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="100dp"
            android:layout_below="@+id/oxidising_gas"
            />

        <ImageButton
            android:id="@+id/flammablesolid"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:background="@drawable/flammablesolid"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="100dp"
            android:layout_below="@+id/flammableliquid"
            />

        <ImageButton
            android:id="@+id/spontaneoulycombustible"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:background="@drawable/spontaneouslycombustible"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="100dp"
            android:layout_below="@+id/flammablesolid"
            />

        <ImageButton
            android:id="@+id/dangerouswhenwet"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:background="@drawable/dangerouswhenwet"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="100dp"
            android:layout_below="@+id/spontaneoulycombustible"
            />

        <ImageButton
            android:id="@+id/oxidisingagent"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:background="@drawable/oxidisingagent"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="100dp"
            android:layout_below="@+id/dangerouswhenwet"
            />

        <ImageButton
            android:id="@+id/oxidisingperoxide"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:background="@drawable/oxidisingperoxide"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="100dp"
            android:layout_below="@+id/oxidisingagent"
            />

        <ImageButton
            android:id="@+id/toxic"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:background="@drawable/toxic"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="100dp"
            android:layout_below="@+id/oxidisingperoxide"
            />

        <ImageButton
            android:id="@+id/corrosive"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:background="@drawable/corrosive"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="100dp"
            android:layout_below="@+id/toxic"
            />


        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioGroup">

            <RadioButton
                android:id="@+id/flammablecheck1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="120dp"
                />

            <RadioButton
                android:id="@+id/nontoxicflammablegascheck1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="50dp"
                />

            <RadioButton
                android:id="@+id/toxicgascheck1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="50dp"
                />

            <RadioButton
                android:id="@+id/oxidising_gascheck1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="80dp"
                />

            <RadioButton
                android:id="@+id/flammableliquidcheck1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="80dp"
                />

            <RadioButton
                android:id="@+id/flammablesolidcheck1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="80dp"
                />

            <RadioButton
                android:id="@+id/spontaneoulycombustiblecheck1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="95dp"
                />



            <RadioButton
                android:id="@+id/dangerouswhenwetcheck1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="80dp"
                />

            <RadioButton
                android:id="@+id/oxidisingagentcheck1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="94dp"
                />

            <RadioButton
                android:id="@+id/organicperoxidecheck1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="91dp"
                />

            <RadioButton
                android:id="@+id/toxiccheck1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="80dp"
                />

            <RadioButton
                android:id="@+id/corrosivecheck1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="91dp"
                />



        </RadioGroup>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <RadioButton
                android:id="@+id/flammablecheck2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/flamamble"
                android:layout_marginTop="120dp"
                android:layout_marginLeft="190dp"
                />

            <RadioButton
                android:id="@+id/nontoxicflammablegascheck2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/nontoxicflammablegascheck1"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="190dp"
                />

            <RadioButton
                android:id="@+id/toxicgascheck2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/toxicgascheck1"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="190dp"
                />

            <RadioButton
                android:id="@+id/oxidising_gascheck2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/oxidising_gascheck1"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="190dp"
                />

            <RadioButton
                android:id="@+id/flammableliquidcheck2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/flammableliquidcheck1"
                android:layout_marginTop="86dp"
                android:layout_marginLeft="190dp"
                />

            <RadioButton
                android:id="@+id/flammablesolidcheck2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/flammablesolidcheck1"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="190dp"
                />

            <RadioButton
                android:id="@+id/spontaneoulycombustiblecheck2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/spontaneoulycombustiblecheck1"
                android:layout_marginTop="92dp"
                android:layout_marginLeft="190dp"
                />

            <RadioButton
                android:id="@+id/dangerouswhenwetcheck2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/dangerouswhenwetcheck1"
                android:layout_marginTop="78dp"
                android:layout_marginLeft="190dp"
                />

            <RadioButton
                android:id="@+id/oxidisingagentcheck2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/oxidisingagentcheck1"
                android:layout_marginTop="95dp"
                android:layout_marginLeft="190dp"
                />

            <RadioButton
                android:id="@+id/organicperoxidecheck2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/organicperoxidecheck1"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="190dp"
                />

            <RadioButton
                android:id="@+id/toxiccheck2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/toxiccheck1"
                android:layout_marginTop="82dp"
                android:layout_marginLeft="190dp"
                />

            <RadioButton
                android:id="@+id/corrosivecheck2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/corrosivecheck1"
                android:layout_marginTop="89dp"
                android:layout_marginLeft="190dp"
                />

        </RadioGroup>

    </RelativeLayout>

</ScrollView>
